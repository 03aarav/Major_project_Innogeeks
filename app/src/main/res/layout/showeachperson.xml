<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="50dp"
        android:layout_margin="10dp"
        android:backgroundTint="#EABCF3"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"

                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/timage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/images"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Aarav yadav"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="italic"/>
                <TextView
                    android:id="@+id/tphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="No:956976067"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="italic"/>
            </LinearLayout>
                <ImageView
                    android:id="@+id/connect"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/chat"
                    android:paddingLeft="10dp"
                    android:layout_margin="20dp"
                    android:layout_marginVertical="15dp"/>

        </LinearLayout>

            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginTop="15dp"

                android:hint="Adrress"/>
            <TextView
                android:id="@+id/Charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginTop="15dp"



                android:hint="Charges"/>
            <Button
                android:id="@+id/showdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Show More Detail"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>