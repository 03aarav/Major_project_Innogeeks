<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2D3FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowActivity">

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:background="#F2D3FA"
      app:cardCornerRadius="10dp"
     android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="match_parent"
        android:src="@drawable/baseline_image_search_24"
        android:layout_height="250dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aarav yadav"
            android:textSize="20dp"
            android:textStyle="bold"/>
    <TextView
        android:id="@+id/address"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
         android:hint="Address"/>
      <TextView
          android:id="@+id/number"
          android:layout_marginLeft="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="9889397065"/>
        <TextView
            android:id="@+id/Charge"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Charge"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>
  </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#E593F3"
        app:cardCornerRadius="20dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/Review"
        android:layout_marginLeft="15dp"
        android:layout_width="300dp"

        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Give Review"
        />
    <ImageView
        android:id="@+id/postreview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:hint="Post Review"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/baseline_send_24"
        android:textSize="20dp"/>

</LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/showreviewbtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:src="@drawable/baseline_keyboard_double_arrow_down_24"
       />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewRecyler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



  </LinearLayout>